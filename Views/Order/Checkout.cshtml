@model CheckoutViewModel

<link rel="stylesheet" href="~/css/checkout.css" /> 

<form asp-area="" asp-controller="Order" asp-action="Checkout" method="post">
  <div class="card">
    <button class="proceed" type="submit">
        <svg class="sendicon" width="24" height="24" viewBox="0 0 24 24">
            <path d="M4,11V13H16L10.5,18.5L11.92,19.92L19.84,12L11.92,4.08L10.5,5.5L16,11H4Z"></path>
        </svg>
    </button>
    <img src="https://seeklogo.com/images/V/VISA-logo-62D5B26FE1-seeklogo.com.png" class="logo-card">
 <label>Card number:</label>
 <input id="user" type="text" class="input cardnumber"  placeholder="1234 5678 9101 1121" asp-for="CreditCartNumber"/>
 <label>Name:</label>
 <input class="input name"  placeholder="Edgar Pérez" asp-for="Name">
 <label class="toleft">CCV:</label>
 <input class="input toleft ccv" placeholder="321" asp-for="Cvv">
  </div>
  </form>
  <div class="receipt">
    <div class="col"><p>Cost:</p>
    <h2 class="cost">$@Model.TotalPrice</h2><br>
  @*  <p>Name:</p>
    <h2 class="seller">Codedgar</h2>*@
    </div>
    <div class="col">
      <p>Bought Items:</p>
      @foreach (var item in @Model.Cart.ListCartItems)
      {
          <h3 class="bought-items">@item.Product.Name</h3>
          <p class="bought-items price">$@item.Product.Price (0% discount)</p><br>
      }
    </div>
    <p class="comprobe">This information will be sended to your email</p>
  </div>