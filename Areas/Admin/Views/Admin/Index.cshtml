@model ProductViewModel

@{ 
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
 }
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-12">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Products</h6>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Product</th>
                                            <th scope="col">Price</th>
                                          @*  <th scope="col">Category</th>*@
                                            <th scope="col">Brand</th>
                                            <th scope="col"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in @Model.Products)
                                        {
                                        <tr>
                                            <th scope="row"></th>
                                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                            <td>$@Html.DisplayFor(modelItem => item.Price)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Brand.Name)</td>
                                            <td>
                                                <a class="btn btn-sm btn-sm-square btn-outline-primary m-2" asp-area="Admin"
                                                    asp-controller="Admin" asp-action="EditProduct" asp-route-id="@item.ProductId"><i class="bi bi-pen"></i></a>
                                                <a class="btn btn-sm btn-sm-square btn-outline-primary m-2" asp-area="Admin"
                                                    asp-controller="Admin" asp-action="ProductDetails" asp-route-id="@item.ProductId"><i class="bi bi-info-lg "></i></a>
                                                <a class="btn btn-sm btn-sm-square btn-outline-primary m-2" asp-area="Admin"
                                                    asp-controller="Admin" asp-action="DeleteProduct" asp-route-id="@item.ProductId"><i class="bi bi-x-lg"></i></a>
                                            </td>
                                        </tr>
                                        }                                      
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Categories</h6>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">First Name</th>
                                        <th scope="col">Last Name</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in @Model.Categories)
                                    {
                                     <tr>
                                        <th scope="row"></th>
                                        <td>@Html.DisplayFor(categoryName => item.Name)</td>
                                        <td>@Html.DisplayFor(categoryName => item.Description)</td>
                                         <td>
                                              <a class="btn btn-sm btn-sm-square btn-outline-primary m-2" asp-area="Admin"
                                                    asp-controller="Admin" asp-action="EditCategory" asp-route-id="@item.CategoryId"><i class="bi bi-pen"></i></a>
                                              <a class="btn btn-sm btn-sm-square btn-outline-primary m-2" asp-area="Admin"
                                                    asp-controller="Admin" asp-action="CategoryDetails" asp-route-id="@item.CategoryId"><i class="bi bi-info-lg"></i></a>
                                              <a class="btn btn-sm btn-sm-square btn-outline-primary m-2" asp-area="Admin"
                                                    asp-controller="Admin" asp-action="DeleteCategory" asp-route-id="@item.CategoryId"><i class="bi bi-x-lg"></i></a>
                                         </td>
                                     </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                     <div class="col-sm-12 col-xl-6">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Brands</h6>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">First Name</th>
                                        <th scope="col">Last Name</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in @Model.Brands)
                                    {
                                     <tr>
                                        <th scope="row"></th>
                                        <td>@Html.DisplayFor(brandName => item.Name)</td>
                                        <td>@Html.DisplayFor(brandName => item.Description)</td>
                                         <td>
                                             <a class="btn btn-sm btn-sm-square btn-outline-primary m-2" asp-area="Admin"
                                                    asp-controller="Admin" asp-action="EditBrand" asp-route-id="@item.BrandId"><i class="bi bi-pen"></i></a>
                                             <a class="btn btn-sm btn-sm-square btn-outline-primary m-2" asp-area="Admin"
                                                    asp-controller="Admin" asp-action="BrandDetails" asp-route-id="@item.BrandId"><i class="bi bi-info-lg"></i></a>
                                             <a class="btn btn-sm btn-sm-square btn-outline-primary m-2" asp-area="Admin"
                                                    asp-controller="Admin" asp-action="DeleteBrand" asp-route-id="@item.BrandId"><i class="bi bi-x-lg"></i></a>
                                         </td>
                                     </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        <!-- Content End -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    